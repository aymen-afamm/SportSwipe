<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SportMatch" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Material 3 uses Material3 theme, Compose handles colors via MaterialTheme() -->
        <!-- Keep only essential attributes -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>
    
    <style name="Theme.SportMatch.Splash" parent="Theme.SportMatch">
        <item name="android:windowBackground">@drawable/bg_gradient_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
